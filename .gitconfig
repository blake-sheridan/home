[alias]
a = add
ap = add --patch
b = branch
bl = branch --list
blr = branch --list --remote
c = checkout
cm = commit --message
co = checkout
cod = checkout develop
com = checkout master
cp = checkout --patch
d = diff
ds = diff --staged
f = fetch
l = log
lf = log --follow
lp = log -p
p = pull
pr = pull --rebase
psu = !git push --set-upstream origin $(git branch | grep \\* | cut -d ' ' -f2)
ra = rebase --abort
rc = rebase --continue
rh = reset HEAD --
rs = rebase --skip
ri = rebase --interactive
s = status
sh = show
st = status --untracked-files=no
stu = stash --include-untracked
su = submodule update
sui = submodule update --init
suir = submodule update --init --recursive
wtf = !git log $(git merge-base --octopus $(git log -1 --merges --pretty=format:%P)).. --boundary --graph --pretty=oneline --abbrev-commit

[clean]
requireForce = false

[color]
status = always

[core]
editor = emacs -nw

[log]
abbrevCommit = true

[push]
default = simple

[rebase]
abbreviateCommands = true

